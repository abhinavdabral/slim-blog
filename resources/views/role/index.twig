{% extends 'templates/app.twig' %}

{% block content %}
<div class="row">
    
    <div class="page-header">
        <h1 id="tables">Roles</h1>
    </div>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Roles</th>
                <th>Users Associated</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for role in roles %}        
            <tr>
                <td>{{role.id}}</td>
                <td><a href="{{path_for('role.show', {'role':role.id})}}">{{ role.name }}</a></td>
                <td>{{role.users|length}}</td>
                <td>{{role.getCreatedAt()}}</td>
                <td>{{role.getUpdatedAt()}}</td>  
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning btn-xs" href="{{path_for('role.edit', {'role':role.id})}}"><span class="fa fa-pencil"></span></a>
                        <a class="btn btn-danger btn-xs" href="{{path_for('role.remove', {'role':role.id})}}"><span class="fa fa-close"></span></a>
                    </div>
                </td>              
            </tr>
            {% endfor %}            
        </tbody>
    </table>
</div>
{% endblock %}