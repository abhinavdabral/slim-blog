{% extends 'templates/app.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">Sign Up</div>
            <div class="panel-body">
                <form action="{{ path_for('auth.signup') }}" method="POST">
                    <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                        <label for="email">E-Mail</label>
                        <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value = "{{ old.email }}">
                        {% if (errors.email) %}
                            <div class="help-block"> {{ errors.email | first }} </div>
                        {% endif %}
                    </div>
                    <div class="form-group{{ errors.name ? ' has-error' : '' }}">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="form-control"  value = "{{ old.name }}">
                        {% if (errors.name) %}
                            <div class="help-block"> {{ errors.name | first }} </div>
                        {% endif %}
                    </div>
                    <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control">
                        {% if (errors.password) %}
                            <div class="help-block"> {{ errors.password | first }} </div>
                        {% endif %}
                    </div>

                    {{ csrf.field | raw }}

                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}