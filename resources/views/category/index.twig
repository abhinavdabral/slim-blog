{% extends 'templates/app.twig' %}

{% block content %}
<div class="row">
    
    <div class="page-header">
        <h1 id="tables">Categories</h1>
    </div>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Category</th>
                <th>Posts Associated</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}        
            <tr>
                <td>{{category.id}}</td>
                <td><a href="{{path_for('category.show', {'category':category.id})}}">{{ category.name }}</a></td>
                <td>{{category.posts|length}}</td>
                <td>{{category.getCreatedAt()}}</td>
                <td>{{category.getUpdatedAt()}}</td>  
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning btn-xs" href="{{path_for('category.edit', {'category':category.id})}}"><span class="fa fa-pencil"></span></a>
                        <a class="btn btn-danger btn-xs" href="{{path_for('category.remove', {'category':category.id})}}"><span class="fa fa-close"></span></a>
                    </div>
                </td>              
            </tr>
            {% endfor %}            
        </tbody>
    </table>
</div>
{% endblock %}